{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
      "./src/**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
}
